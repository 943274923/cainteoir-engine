#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

debian/cainteoir-data.sharedmimeinfo: data/mime/packages/cainteoir-data.xml
	cp -v $< $@

override_dh_auto_configure:
	dh_testdir
	./autogen.sh
	dh_auto_configure -- --disable-update-mime-database $(shell dpkg-buildflags --export=configure)

configure: override_dh_auto_configure

build: configure debian/cainteoir-data.sharedmimeinfo
	dh build

build-arch: configure debian/cainteoir-data.sharedmimeinfo
	dh build-arch

build-indep: configure debian/cainteoir-data.sharedmimeinfo
	dh build-indep

clean:
	dh clean

binary:
	dh binary

binary-arch:
	dh binary-arch

binary-indep:
	dh binary-indep
