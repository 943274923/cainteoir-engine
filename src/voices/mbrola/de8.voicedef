phoneme /{umd,fnt,unr,vwl}/ 60ms # /e/
	unit "e"
end

phoneme /{lmd,fnt,unr,vwl}/ 60ms # /ɛ/
	unit "E"
end

phoneme /{lmd,fnt,rnd,vwl}/ 60ms # /œ/
	unit "9"
end

phoneme /{lmd,bck,rnd,vwl}/ 60ms # /ɔ/
	unit "O"
end

phoneme /{low,fnt,unr,vwl}/ 60ms # /a/
	unit "a"
end

phoneme /{low,bck,unr,vwl}/ 60ms # /ɑ/
	unit "A"
end

