	unit "m"
end

phoneme /{vcd,alv,nas}/ 70ms # /n/
	unit "n"
end

phoneme /{vcd,vel,nas}/ 120ms # /ŋ/
	unit "N"
end

# Sonorants ###################################################################

phoneme /{vcd,alv,lat,apr}/ 55ms # /l/
	unit "l"
end

phoneme /{vcd,pal,apr}/ 50ms # /j/
	unit "j"
end

# Affricates ##################################################################

phoneme /{vls,blb,stp,tie}{vls,lbd,frc}/ 130ms # /p͡f/
	unit "pf"
end

phoneme /{vcd,alv,stp,tie}{vls,alv,sib,frc}/ 130ms # /d͡s/
	unit "ds"
end

